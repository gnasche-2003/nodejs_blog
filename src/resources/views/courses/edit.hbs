<div class="mt-4">
    <h3>Cập nhật khóa học</h3>

    <form
        method="POST"
        action="/courses/{{course._id}}?_method=PUT"
        class="mt-4"
    >
        <div class="form-group">
            <label for="name">Tên</label>
            <input
                type="text"
                value="{{course.name}}"
                name="name"
                class="form-control mt-2"
                id="name"
            />
        </div>

        <div class="form-group mt-4">
            <label for="description">Mô tả</label>
            <textarea
                name="description"
                class="form-control mt-2"
                id="description"
            >
                {{course.description}}
            </textarea>
        </div>

        <div class="form-group mt-4">
            <label for="videoId">Video Id</label>
            <input
                type="text"
                value="{{course.videoId}}"
                name="videoId"
                class="form-control mt-2"
                id="videoId"
            />
        </div>

        <div class="form-group mt-4">
            <label for="level">Level</label>
            <input
                type="text"
                value="{{course.level}}"
                name="level"
                class="form-control mt-2"
                id="level"
            />
        </div>

        <button type="submit" class="btn btn-primary mt-4">Lưu lại</button>
    </form>
</div>